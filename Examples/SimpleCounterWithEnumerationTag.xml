<?xml version="1.0" encoding="UTF-8"?>
<VersionSchema
    name="SimpleCounter"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://versionschema.org/ ../versionschema.experimental.0.xsd"
    xmlns="http://versionschema.org/xmlns"
    xmlns:vs="http://versionschema.org/xmlns"
    canonicalReference="http://versionschema.org/SimpleCounter.html"
    >
    
    <DataFormat>string</DataFormat>
    <Assurance>undefined</Assurance>
    <Sequence>
        <Field name="Counter" type="numeric">
            <ChangeRule>any_changes</ChangeRule>
        </Field>
        <Delim>-.+/</Delim>
        <Field name="Tag" type="enumeration">
            <Literal caseSensitive="false">CIB</Literal>
            <Literal caseSensitive="false">Alpha</Literal>
            <Literal caseSensitive="false">Beta</Literal>
            <Literal caseSensitive="false" isExpression="true">RC\d</Literal>
            <Literal caseSensitive="false">Release</Literal>
        </Field>
    </Sequence>
    
</VersionSchema>

